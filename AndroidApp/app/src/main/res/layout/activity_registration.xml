<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crop"
    tools:context="com.apptellect.activity.RegistrationActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/linear_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Personal Information"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linear_name_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_FirstName"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_middlename"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Middle Name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_LastName"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_container_donor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_donor_type"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Donor Type" />

            <Spinner
                android:id="@+id/spinner_donor_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                >
            </Spinner>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_mail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_email_id"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_address"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_address2"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/MyErrorText"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/edittext_city"
                style="@style/TextAppearStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/country_head"
            style="@style/TextAppearStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Country" />

        <Spinner
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            >
        </Spinner>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnClear"
                android:text="Reset"
                style="@style/ButtonAppearStyle"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:background="@drawable/button_danger"
                android:drawablePadding="8dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
            <Button
                android:id="@+id/btnSubmit"
                android:text="Submit"
                style="@style/ButtonAppearStyle"
                android:paddingRight="15dp"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
