<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#007E33" />
            <gradient android:angle="-90" android:startColor="#007E33" android:endColor="#007E33"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#32CD32" />
            <solid android:color="#28a745"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00C851" />
            <gradient android:angle="-90" android:startColor="#00C851" android:endColor="#00C851" />
        </shape>
    </item>
</selector>